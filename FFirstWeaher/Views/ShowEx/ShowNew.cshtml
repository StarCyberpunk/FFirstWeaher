@using FFirstWeaher.Components;
@using FFirstWeaher.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ShowNew";
}
<a asp-action="Index" asp-controller="Home">Back</a><p></p>
@{
    for(int z = 0; z < 4; z++)
    {
        <a asp-controller="ShowEx" asp-action="ShowNew" asp-route-year=201@(z) asp-route-month="1">201@(z)</a>
    }
    <p></p>
    for(int j = 1; j <= 12; j++)
    { if(j<10){
            <a asp-controller="ShowEx" asp-action="ShowNew" asp-route-year=@Model.year asp-route-month=@j>0@(j)</a>
        }
        else
        {
            <a asp-controller="ShowEx" asp-action="ShowNew" asp-route-year=@Model.year asp-route-month=@j> @(j)</a>
        }

    }
    @if (Model.month < 10)
    {
        <h1>Данные за 0@(Model.month) / @Model.year</h1>
    }
    else
    {
        <h1>Данные за @(Model.month) / @Model.year</h1>
    }
    }

<p>@await Component.InvokeAsync(nameof(WeathersYearMonth), new{year=@Model.year,month=@Model.month})</p>

